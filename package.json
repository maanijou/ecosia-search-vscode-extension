{
    "name": "ecosia-search",
    "displayName": "Ecosia search",
    "description": "Search with Ecosia! The search engine that plants trees ðŸŒ²",
    "version": "0.1.0",
    "publisher": "maanijou",
    "icon": "resources/icon.png",
    "repository": {
		"type": "git",
		"url": "https://github.com/maanijou/ecosia-search-vscode-extension"
	},
    "engines": {
        "vscode": "^1.58.0"
    },
    "bugs": {
		"url": "https://github.com/maanijou/ecosia-search-vscode-extension/issues"
	},
    "categories": [
        "Other"
    ],
    "keywords": [
		"search ecosia"
	],
    "activationEvents": [
        "onCommand:ecosia-search.search"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "editor/context": [
                {
                    "command": "ecosia-search.search",
                    "when": "editorHasSelection",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "ecosia-search.search",
                "title": "Search with Ecosia"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.58.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }
}